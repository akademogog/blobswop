include select/select
include checkbox/checkbox
include radio/radio
include input/input
include breadcrumbs/breadcrumbs

mixin videoPlay()
    .videoPlay
        <svg width="19" height="24" viewBox="0 0 19 24" fill="none" xmlns="http://www.w3.org/2000/svg">
        <path d="M18.3398 11.9998L0.754739 23.7556L0.75474 0.243926L18.3398 11.9998Z" fill="white"/>
        </svg>

mixin trainingItem(num, title, text)
    .training__item
        .additional-title1 #{num}
        .training__item-info
            .training__item-left
                h4.title4 #{title}
            .training__item-right
                p.text0 #{text}
            
mixin questDrop(title, text)
    .questDrop__dropdown
        .questDrop__dropdown-title 
            .questDrop__dropdown-title-text #{title}
            <svg width="16" height="10" viewBox="0 0 16 10" fill="none" xmlns="http://www.w3.org/2000/svg">
                <path d="M1 1L8 8L15 1" stroke="white" stroke-width="2"/>
                </svg>
        .questDrop__dropdown-contant
            .questDrop__dropdown-contant-text #{text}

mixin whomItem(name, text)
    .whom-item
        h4.title4.whom-item__name #{name}
        p.text1.whom-item__text #{text}
    

